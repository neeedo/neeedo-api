# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Static.documentation()

# Demand
GET     /demand                     @controllers.Demand.listDemands()
GET     /demand/:id                 @controllers.Demand.getDemand(id: model.DemandId)
POST    /demand                     @controllers.Demand.createDemand()
PUT     /demand/:id                 @controllers.Demand.updateDemand(id: model.DemandId)
DELETE  /demand/:id                 @controllers.Demand.deleteDemand(id: model.DemandId)
OPTIONS /demand                     @controllers.Static.documentation()

# Offer
GET     /offer                     @controllers.Offer.listOffers()
GET     /offer/:id                 @controllers.Offer.getOffer(id: model.OfferId)
POST    /offer                     @controllers.Offer.createOffer()
PUT     /offer/:id                 @controllers.Offer.updateOffer(id: model.OfferId)
DELETE  /offer/:id                 @controllers.Offer.deleteOffer(id: model.OfferId)
OPTIONS /offer                     @controllers.Static.documentation()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
